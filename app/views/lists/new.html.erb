<h1>Add a Movie to "<%= @list.name %>"</h1>

<%= form_with model: @bookmark, url: list_bookmarks_path(@list), local: true do |f| %>
  <div>
    <%= f.label :movie_id, "Choose a movie" %>
    <%= f.collection_select :movie_id, Movie.all, :id, :title, prompt: "Select a movie" %>
  </div>

  <div>
    <%= f.label :comment %>
    <%= f.text_area :comment %>
  </div>

  <%= f.submit "Add Bookmark" %>
<% end %>

<%= link_to "Back to List", list_path(@list) %>
